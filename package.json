{
	"name": "file-sync",
	"version": "4.0.0",
	"description": "一个简单的文件/文字同步服务器",
	"bin": "dist/server/index.js",
	"main": "dist/server/index.js",
	"scripts": {
		"watch": "concurrently \"npx webpack -w\" \"tsc --project ./tsconfig.common.json -w\" \"tsc --project ./tsconfig.es6.json -w\" \"nodemon ./dist/server/index.js\"",
		"copy": "concurrently \"@powershell -Command if (!(Test-Path .\\dist\\client)) {New-Item .\\dist\\client -Type Directory}; Copy-Item -Path .\\src\\html\\* -Destination .\\dist\\client -Recurse -Force\"",
		"build": "tsc --project ./tsconfig.common.json && tsc --project ./tsconfig.es6.json && npx webpack",
		"debug": "node --trace-warnings ./dist/server/index.js",
		"rcedit": "node ./rcedit.js",
		"exec": "concurrently \"pkg -t win package.json\" "
	},
	"keywords": [
		"fileSnyc",
		"file",
		"sync",
		"server",
		"text",
		"textSync",
		"textSyncServer",
		"fileSyncServer",
		"fileSync",
		"textSyncServer"
	],
	"author": "NoRain",
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/multer": "^1.4.11",
		"@types/node": "^20.2.1",
		"@types/socket.io": "^3.0.2",
		"@types/ws": "^8.5.10",
		"concurrently": "^8.2.2",
		"nodemon": "^2.0.22",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.0.4",
		"webpack": "^5.90.3",
		"webpack-cli": "^5.1.4",
		"webpack-node-externals": "^3.0.0",
		"ws": "^8.15.1"
	},
	"dependencies": {
		"common-js": "^0.3.8",
		"express": "^4.18.2",
		"multer": "^1.4.5-lts.1",
		"open": "^6.4.0",
		"rcedit": "^4.0.1",
		"socket.io": "^4.7.2",
		"socket.io-client": "^4.7.2",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7"
	},
	"pkg": {
		"assets": [
			"dist/client/**/*",
			"dist/server/**/*",
			"node_modules/sqlite3/build/Release/node_sqlite3.node"
		],
		"outputPath": "exec"
	}
}
